{
    "flake8.args": [
        "--extend-ignore=E203"
    ],
    "black-formatter.args": [
        "--line-length=79"
    ],
    "isort.args": [
        "--profile",
        "black",
        "-l",
        "79"
    ],
    "isort.path": [
        "${workspaceFolder}/.venv/bin/isort"
    ],
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
    },
}